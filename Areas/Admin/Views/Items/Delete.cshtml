@model Fast_Food_Delievery.Models.Item

@{
    ViewData["Title"] = "Delete Item";
}

<div class="container mt-4">
    <h2 class="mb-3 text-danger">Delete Item</h2>
    <p class="text-muted">Are you sure you want to delete this item? This action cannot be undone.</p>
    <hr />

    <div class="card shadow-sm p-3 mb-3">
        <div class="row g-3 align-items-center">
            <div class="col-md-3 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Current Image</label><br />
                        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" class="img-thumbnail" style="max-width:200px; max-height:200px;" />
                    </div>
                }

                else
                {
                    <div class="text-muted">No image available</div>
                }
            </div>
            <div class="col-md-9">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3">Price</dt>
                    <dd class="col-sm-9">@Model.Price</dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">@Model.Category?.Title</dd>

                    <dt class="col-sm-3">SubCategory</dt>
                    <dd class="col-sm-9">@Model.SubCategory?.Title</dd>
                </dl>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </form>
</div>
