@model Fast_Food_Delievery.ViewModel.CartOrderViewModel

@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4 text-center">🧾 Checkout Summary</h2>

    <div class="row">
        <div class="col-md-7">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Your Order</h5>
                </div>
                <div class="card-body">
                    @foreach (var cart in Model.ListOfCart)
                    {
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <span>@cart.Item.Name × @cart.Count</span>
                            <span>@(cart.Item.Price* cart.Count) EGP</span>
                        </div>
                    }
                    <div class="d-flex justify-content-between mt-3 fw-bold fs-5">
                        <span>Total:</span>
                        <span class="text-success">@Model.OrderHeader.OrderTotal.ToString("0.00") EGP</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Confirm Order</h5>
                </div>
                <div class="card-body text-center">
                    <form asp-area="Customer" asp-controller="Payment" asp-action="ProcessCashPayment" method="post">
                        <input type="hidden" name="amount" value="@Model.OrderHeader.OrderTotal" />

                        <button type="submit" class="btn btn-success btn-lg px-5 mt-3">
                            ✅ Confirm Cash Order
                        </button>

                        <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 mt-3 ms-2">
                            Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
