@model Fast_Food_Delievery.ViewModel.CartOrderViewModel

<section class="h-100" style="background-color:#eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">🛒 Shopping Cart</h3>
                    <a asp-action="Index" asp-controller="Home" asp-area="Customer" class="text-body">Continue Shopping</a>
                </div>

                @if (Model.ListOfCart != null && Model.ListOfCart.Count > 0)
                {
                    foreach (var cart in Model.ListOfCart)
                    {
                        <div class="card rounded-3 mb-4 shadow-sm border-0">
                            <div class="card-body p-4">
                                <div class="row d-flex justify-content-between align-items-center">

                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                        <img src="@(string.IsNullOrEmpty(cart.Item.ImageUrl) ? "/images/noimage.png" : cart.Item.ImageUrl)"
                                             class="img-fluid rounded-3" alt="@cart.Item.Name" />
                                    </div>

                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                        <p class="lead fw-normal mb-2">@cart.Item.Name</p>
                                        <p class="text-muted small">@Html.Raw(cart.Item.Description)</p>
                                    </div>

                                    <div class="col-md-2 col-lg-2 col-xl-2 text-center">
                                        <h5 class="mb-0 text-success fw-bold">@cart.Item.Price.ToString("0.00") EGP</h5>
                                    </div>

                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex justify-content-center align-items-center">
                                        <a asp-action="Minus" asp-controller="Cart" asp-area="Customer" asp-route-cartId="@cart.Id" class="btn btn-link px-2">
                                            <i class="fas fa-minus-circle fa-lg text-danger">-</i>
                                        </a>

                                        <h5 class="mb-0 mx-3">@cart.Count</h5>

                                        <a asp-action="Plus" asp-controller="Cart" asp-area="Customer" asp-route-cartId="@cart.Id" class="btn btn-link px-2">
                                            <i class="fas fa-plus-circle fa-lg text-success">+</i>
                                        </a>
                                    </div>

                                    <div class="col-md-2 col-lg-2 col-xl-1 text-end">
                                        <a asp-action="Remove" asp-controller="Cart" asp-area="Customer" asp-route-cartId="@cart.Id" class="btn btn-link text-danger px-2">
                                            <i class="fas fa-trash fa-lg"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="card mb-4 border-0 shadow-sm">
                        <div class="card-body p-4 d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 fw-bold">Total:</h5>
                            <h4 class="text-success fw-bold">@Model.OrderHeader.OrderTotal.ToString("0.00") EGP</h4>
                        </div>
                    </div>

                    <div class="text-end">
                        <a asp-area="Customer" asp-controller="Cart" asp-action="Checkout" method="post" class="btn btn-success btn-lg">
                            Proceed to Checkout
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center mt-5">
                        <h4 class="text-muted">😔 Your cart is empty</h4>
                        <a asp-action="Index" asp-controller="Home" asp-area="Customer" class="btn btn-primary mt-3">Return to Shop</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
