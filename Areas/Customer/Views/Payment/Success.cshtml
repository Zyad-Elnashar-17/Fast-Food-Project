@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container text-center py-5">
    <div class="card shadow-lg border-0 p-5 mx-auto" style="max-width: 600px;">
        <div class="text-success mb-4">
            <i class="bi bi-check-circle-fill" style="font-size: 5rem;"></i>
        </div>

        <h2 class="fw-bold text-success mb-3">Payment Successful!</h2>
        <p class="text-muted fs-5">@TempData["PaymentMessage"]</p>

        <hr />

        <p class="fs-6 text-secondary">Thank you for your purchase. Your order has been received and is being processed.</p>

        <div class="mt-4">
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4">
                Back to Home
            </a>
        </div>
    </div>
</div>
