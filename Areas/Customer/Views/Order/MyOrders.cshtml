@model IEnumerable<Fast_Food_Delievery.Models.OrderHeader>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4 text-center">My Orders</h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <img src="https://cdn-icons-png.flaticon.com/512/4076/4076500.png" width="120" class="mb-3" />
            <h5 class="text-muted">You have no orders yet.</h5>
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                Start Shopping
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var order in Model)
            {
                var images = order.OrderDetails?
                .Select(d => d.Item?.ImageUrl)
                .Where(url => !string.IsNullOrEmpty(url))
                .Take(4)
                .ToList() ?? new List<string>();

                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h6 class="fw-bold mb-1">Order #@order.Id</h6>
                                    <small class="text-muted">@order.OrderDate.ToString("dd MMM yyyy")</small>
                                </div>
                                <div>
                                    @if (order.OrderStatus == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (order.OrderStatus == "Completed")
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else if (order.OrderStatus == "Cancelled")
                                    {
                                        <span class="badge bg-danger">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@order.OrderStatus</span>
                                    }
                                </div>
                            </div>

                            <div class="d-flex mb-3 flex-wrap gap-2">
                                @if (images.Any())
                                {
                                    foreach (var img in images)
                                    {
                                        <img src="@img"
                                             class="rounded"
                                             style="width: 60px; height: 60px; object-fit: cover;" />
                                    }
                                }
                                else
                                {
                                    <img src="https://cdn-icons-png.flaticon.com/512/1040/1040230.png"
                                         width="60"
                                         height="60"
                                         class="rounded border" />
                                }

                                @if (order.OrderDetails?.Count > 4)
                                {
                                    <div class="rounded border d-flex align-items-center justify-content-center"
                                         style="width: 60px; height: 60px; font-weight: 600;">
                                        +@((order.OrderDetails.Count - 4))
                                    </div>
                                }
                            </div>

                            <ul class="list-unstyled small mb-3">
                                <li><strong>Payment:</strong> @order.PaymentMethod</li>
                                <li><strong>Total:</strong> @order.OrderTotal.ToString("C")</li>
                                @if (order.Voucher != null && order.Voucher.IsActive)
                                {
                                    <li class="text-success"><strong>Voucher:</strong> Applied ✅</li>
                                }
                                else
                                {
                                    <li class="text-muted"><strong>Voucher:</strong> Not Voucher Used</li>
                                }
                            </ul>

                            <div class="text-end">
                                <a href="#"
                                   class="btn btn-outline-primary btn-sm">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
