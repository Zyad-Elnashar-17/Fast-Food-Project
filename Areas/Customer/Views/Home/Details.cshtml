@model Fast_Food_Delievery.Models.Cart

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="@Model.Item.ImageUrl" alt="@Model.Item.Name" class="img-fluid h-100 w-100 object-fit-cover rounded-start" />
            </div>

            <div class="col-md-7 p-4">
                <h2 class="fw-bold mb-3 text-primary">@Model.Item.Name</h2>
                <p class="text-muted">@Html.Raw(Model.Item.Description)</p>

                <hr />

                <div class="mb-3">
                    <strong>Price:</strong>
                    <span class="text-success fs-5 fw-semibold">
                        @Model.Item.Price.ToString("C")
                    </span>
                </div>

                <div class="mb-2">
                    <strong>Category:</strong>
                    <span>@Model.Item.Category.Title</span>
                </div>

                @if (Model.Item.SubCategory != null)
                {
                    <div class="mb-2">
                        <strong>Subcategory:</strong>
                        <span>@Model.Item.SubCategory.Title</span>
                    </div>
                }

                <form method="post" asp-action="Details" class="mt-4">
                    <div class="d-flex align-items-center mb-3">
                        <label asp-for="Count" class="form-label me-2 fw-semibold">Quantity:</label>
                        <input asp-for="Count" type="number" min="1" value="1" class="form-control w-25 text-center" />
                    </div>

                    <input type="hidden" asp-for="ItemId" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Back to Shop
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
